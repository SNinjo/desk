{
    "manifest_version": 2,
  
    "name": "Desk",
    "version": "1.0.0",
    "description": "Desk is a Chrome Extension that provides enhanced bookmark functionality.",
    "icons": { "128": "/assets/icon.png" },
  
    "permissions": [
      "activeTab",
      "storage",
      "http://*/",
      "https://*/"
    ],
    "browser_action": {
      "default_icon": "/assets/icon.png"
    }, 
    "background": {  
      "persistent": false,  
      "scripts": ["/background/index.js"]  
    },  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["/content/index.css"],
        "js": ["/content/index.js"]
      }
    ],
    "web_accessible_resources": ["/unit/*"]
}