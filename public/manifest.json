{
	"manifest_version": 2,

	"name": "Desk",
	"version": "1.0.0",
	"description": "Desk is a Chrome Extension that provides enhanced bookmark functionality.",
	"icons": { "128": "icon.png" },

	"permissions": [
		"activeTab",
		"storage",
		"webNavigation",
		"http://*/",
		"https://*/"
	],
	"browser_action": {
		"default_icon": "icon.png"
	}, 
	"background": {  
		"persistent": false,  
		"scripts": ["background.bundle.js"]  
	},  
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content.bundle.css"],
			"js": ["content.bundle.js"]
		}
	],
	"web_accessible_resources": ["/unit/*"]
}